<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<b:Row>
		<b:Column size="XS_12">
			<g:FlowPanel>
				<b:Icon pull="RIGHT" type="TABLE"
					styleName="fa fa-table header-icon" />
				<b:PageHeader text="Compare Software Versions"
					subText="" ui:field="heading" />
			</g:FlowPanel>

			<g:VerticalPanel width="100%"
				horizontalAlignment="CENTER" ui:field="loading" visible="true">
				<b:Heading text="Loading" size="H2" />
				<b:Icon type="GEAR" size="TIMES4" spin="true" />
			</g:VerticalPanel>

			<b:Panel type="INFO" ui:field="matrixpanel" visible="false">
				<b:PanelBody styleName="panel-body tight-body">
					<g:ScrollPanel styleName="software-list-scroller">
						<g:FlexTable width="100%" ui:field="table"
							styleName="comparison-table" />
					</g:ScrollPanel>
				</b:PanelBody>
			</b:Panel>

		</b:Column>
	</b:Row>
</ui:UiBinder>