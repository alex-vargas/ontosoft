<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:c="urn:import:org.ontosoft.client.components.chart"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<b:Row>
		<b:Column size="XS_12">
	
			<b:Modal title="Publish Software Version" closable="true"
				fade="true" ui:field="publishdialog">
				<b:ModalBody>
					<b:FormGroup>
						<b:TextBox ui:field="softwarelabel"
							placeholder="Type the Software version identification"
							autoComplete="false" allowBlank="false" />
						<b:HelpBlock />
					</b:FormGroup>
				</b:ModalBody>
				<b:ModalFooter>
					<b:Button type="INFO" dataDismiss="MODAL"
						ui:field="cancelbutton" text="Cancel" />
					<b:Button type="SUCCESS" dataDismiss="MODAL"
						ui:field="publishbutton" text="Submit" />
				</b:ModalFooter>
			</b:Modal>
			<g:VerticalPanel width="100%"
				horizontalAlignment="CENTER" ui:field="loading" visible="true">
				<b:Heading text="Loading" size="H2" />
				<b:Icon type="GEAR" size="TIMES4" spin="true" />
			</g:VerticalPanel>
			<g:FlowPanel>
				<b.html:Div styleName="chart-icon pull-right">
					<c:CategoryPieChart ui:field="piechart"
						name="topchart" size="100" />
				</b.html:Div>
				<g:VerticalPanel ui:field="softwareName" />
				<b:PageHeader ui:field="softwareTitle" />
			</g:FlowPanel>
			<g:FlowPanel>
				<b:ButtonGroup pull="LEFT"
					styleName="btn-group btn-group-responsive has-bottom-margin"
					visible="true">
					<b:Button ui:field="bigpublishbutton" type="INFO"
						icon="CLOUD_UPLOAD" text="Publish your software version" />
				</b:ButtonGroup>
				<b:ButtonGroup pull="LEFT"
					styleName="btn-group btn-group-responsive has-bottom-margin">
					<b:Tooltip
						title="Produce an HTML document that you can save and use in
						your website"
						showDelayMs="500">
						<b:Button size="SMALL" type="INFO" text="HTML"
							ui:field="htmlbutton" />
					</b:Tooltip>
					<b:Tooltip
						title="Produce an RDF document that you can save and use for
						storing metadata in a structured form"
						showDelayMs="500">
						<b:Button size="SMALL" type="INFO" text="RDF/XML"
							ui:field="rdfbutton" />
					</b:Tooltip>
					<b:Tooltip
						title="Produce a JSON document that you can save and use in 
						other applications"
						showDelayMs="500">
						<b:Button size="SMALL" type="INFO" text="JSON"
							ui:field="jsonbutton" />
					</b:Tooltip>
				</b:ButtonGroup>
				<b:ButtonGroup pull="RIGHT"
					styleName="btn-group btn-group-responsive has-bottom-margin">
					<b:Button size="SMALL" type="INFO" text="Rate" icon="STAR"
						ui:field="ratebutton" enabled="false" />
					<b:Button size="SMALL" type="INFO" text="Edit" icon="EDIT"
						ui:field="editbutton" />
				</b:ButtonGroup>
			</g:FlowPanel>
			<g:VerticalPanel styleName="maxwidth-panel"
				width="100%" ui:field="softwareBody" />
		</b:Column>
	</b:Row>

</ui:UiBinder>