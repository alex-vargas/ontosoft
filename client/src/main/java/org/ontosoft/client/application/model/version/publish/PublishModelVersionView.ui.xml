<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:c="urn:import:org.ontosoft.client.components.chart"
	xmlns:f="urn:import:org.ontosoft.client.components.form"
	xmlns:n="urn:import:org.ontosoft.client.components.form.notification"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:cv="urn:import:com.google.gwt.user.cellview.client">
	<b:Row>
		<b:Column size="XS_12">
			<g:VerticalPanel width="100%" horizontalAlignment="CENTER"
				ui:field="loading" visible="true">
				<b:Heading text="Loading" size="H2" />
				<b:Icon type="GEAR" size="TIMES4" spin="true" />
			</g:VerticalPanel>
			<b:Breadcrumbs ui:field="breadcrumbs" visible="false" />
			<g:VerticalPanel width="100%" horizontalAlignment="CENTER">
				<b:Heading size="H3" ui:field="heading"
					text="Annotate your model to help others do the following" />
			</g:VerticalPanel>			
			<n:PluginNotifications ui:field="notifications" />
			<b:Row>
				<b:Column size="XS_12" ui:field="sidecolumn">
					<b:Row>
						<b:Column size="XS_12 SM_8 MD_6" offset="SM_2 MD_3"
							ui:field="piecolumn" styleName="vcenter">							
							<g:VerticalPanel width="100%"
								horizontalAlignment="CENTER">
								<b:ButtonGroup visible="false" ui:field="buttons"
									styleName="btn-group btn-group-responsive has-bottom-margin">
									<b:Button type="INFO" ui:field="reloadbutton" icon="REFRESH"
										dataLoadingText="" size="SMALL" title="Reload"/>
									<b:Button size="SMALL" type="INFO" text="" icon="USER_PLUS" ui:field="permbutton" title="Set Permission"/>
									<b:Button type="SUCCESS" ui:field="savebutton" text="Save"
										icon="SAVE" size="SMALL" enabled="false" dataLoadingText="Saving.." />
								</b:ButtonGroup>
							</g:VerticalPanel>
							<b:Modal closable="true" fade="true" ui:field="permissiondialog">
							<b:ModalBody>
								<b:FormGroup>
									<b:Row>
										<b:Column size="XS_2" addStyleNames="permissionlabel">
											<b:Heading size="H5" text="User"></b:Heading>
										</b:Column>
										<b:Column size="XS_10">
											<select:Select ui:field="userlist" title="Select" visible="false" liveSearch="true" fixedMenuSize="8"/>
											<b:HelpBlock />
										</b:Column>
									</b:Row>
									<b:Row>
										<b:Column size="XS_2" addStyleNames="permissionlabel">
											<b:Heading size="H5" text="Permission"></b:Heading>
										</b:Column>
										<b:Column size="XS_10">
											<select:Select ui:field="permlist" title="Select" visible="false" liveSearch="true" fixedMenuSize="2"/>
											<b:HelpBlock />
										</b:Column>
									</b:Row>
									<b:Row>
										<b:Column size="XS_12" offset="SM_2">
											<g:CheckBox text="Owner" ui:field="ownerrole" />
										</b:Column>
									</b:Row>
								</b:FormGroup>
									<b:Row>
										<b:Column size="XS_12">
											<g:FlowPanel>
												<b:PageHeader ui:field="title" subText="" />
											</g:FlowPanel>
									
											<b:Panel type="INFO">
												<b:PanelHeader styleName="panel-heading tight-header">
													<g:HorizontalPanel verticalAlignment="MIDDLE" width="100%">
														<b:Heading size="H6" text="Browse Permissions" />
													</g:HorizontalPanel>
												</b:PanelHeader>
												<b:PanelBody styleName="panel-body tight-body">
													<b.gwt:CellTable condensed="false" striped="true" hover="true" width="100%" ui:field="table" />
													<g:VerticalPanel width="100%" horizontalAlignment="CENTER">
														<cv:SimplePager ui:field="pager" location="CENTER" />
													</g:VerticalPanel>
												</b:PanelBody>
											</b:Panel>
										</b:Column>
									</b:Row>
							</b:ModalBody>
							<b:ModalFooter>
								<b:Button type="INFO" dataDismiss="MODAL" ui:field="cancelbutton" text="Cancel" />				
								<b:Button type="SUCCESS" dataDismiss="MODAL" ui:field="setpermbutton" text="Submit" />
							</b:ModalFooter>
							</b:Modal>
							<c:CategoryPieChart ui:field="piechart" name="piechart" size="200" />
						</b:Column>
						<b:Column size="XS_7, SM_6, MD_6" ui:field="barcolumn" styleName="vcenter">
							<c:CategoryBarChart ui:field="barchart" name="barchart" width="280" height="200" />
						</b:Column>
					</b:Row>
				</b:Column>
				<b:Column size="XS_12,SM_8,MD_9">
					<f:ModelVersionForm ui:field="modelform" />
				</b:Column>
			</b:Row>
		</b:Column>
	</b:Row>

</ui:UiBinder>
